    <appender name="KAFKA" class="net.logstash.logback.appender.LogstashKafkaAppender">
        <topic>your-log-topic</topic>
        <keyingStrategy class="net.logstash.logback.keying.NoKeyKeyingStrategy"/>
        <producerConfig>bootstrap.servers=your.kafka.broker:9092</producerConfig>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{0}: %msg%n</pattern>
        </encoder>
    </appender>
